{
	"name": "sandbox",
	"version": "1.0.0",
	"description": "Starting point for new projects",
	"main": "src/js/script.js",
	"scripts": {
		"lint:js": "eslint ./src/js --ext .js,.jsx,.ts,.tsx",
		"lint:sass": "stylelint \"src/sass/**/*.scss\"",
		"lint": "npm run lint:sass && npm run lint:js",
		"start": "parcel \"./src/index.html\" --no-cache",
		"test": "jest --watchAll"
	},
	"author": "Ahmed Abuelgasim",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/hungryphilomath/sandbox.git"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			]
		]
	},
	"browserslist": [
		"last 2 versions",
		"not IE <= 11"
	],
	"eslintIgnore": [
		"**/*.min.js"
	],
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/preset-env": "^7.14.5",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"eslint": "^7.29.0",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-no-autofix": "^1.1.2",
		"jest": "^27.0.4",
		"parcel-bundler": "^1.12.5",
		"sass": "^1.30.0",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.19.0",
		"typescript": "^4.3.4"
	}
}
