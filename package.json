{
  "name": "sandbox",
  "version": "1.0.0",
  "description": "Starting point for new projects",
  "main": "src/js/script.js",
  "scripts": {
    "lint:js": "eslint ./src/js --ext .js,.jsx,.ts,.tsx",
    "lint:sass": "stylelint \"src/sass/**/*.scss\"",
    "lint": "npm run lint:sass && npm run lint:js",
    "start": "parcel \"./src/index.html\" --no-cache",
    "test": "jest --watchAll"
  },
  "author": "Ahmed Abuelgasim",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/hungryphilomath/sandbox.git"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not IE <= 11"
  ],
  "eslintIgnore": [
    "**/*.min.js"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.30.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.1.3"
  }
}
