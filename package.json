{
  "name": "sandbox",
  "version": "1.0.0",
  "description": "Starting point for new projects",
  "main": "src/js/script.js",
  "scripts": {
    "lint-js": "eslint ./src/js --ext .js,.jsx,.ts,.tsx",
    "lint-sass": "stylelint \"src/sass/**/*.scss\"",
    "lint": "npm run lint-sass && npm run lint-js",
    "start": "parcel \"./src/index.html\"",
    "test": "jest --watchAll"
  },
  "author": "Ahmed Abuelgasim",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/hungryphilomath/sandbox.git"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not IE > 9"
  ],
  "eslintIgnore": [
    "**/*.min.js"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.1.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.8.3"
  }
}
